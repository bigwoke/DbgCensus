    <Description>A wrapper for interacting with the query endpoints of Daybreak Game Company's Census API.</Description>
    <PackageReleaseNotes>Added default Polly policies (WaitAndRetry, CircuitBreaker). ICensusRestClient and IQueryService are now registered transiently.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Http" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Http.Polly" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
    <PackageReference Include="Polly.Contrib.WaitAndRetry" Version="1.1.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DbgCensus.Core\DbgCensus.Core.csproj" />
  </ItemGroup>

</Project>
